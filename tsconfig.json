{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2015.iterable"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ]
}